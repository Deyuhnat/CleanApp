<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/marker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:text="Title"
        android:textColor="#4CAF50" />

    <TextView
        android:id="@+id/marker_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:text="Description"
        android:textColor="#3C3C3C" />

    <TextView
        android:id="@+id/marker_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:text="Latitude"
        android:textColor="#3C3C3C" />

    <TextView
        android:id="@+id/marker_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        android:text="Longitude"
        android:textColor="#3C3C3C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/marker_navigate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View joiner"
            android:background="@drawable/button_style_back"/>

        <Button
            android:id="@+id/marker_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:background="@drawable/button_style_back"
            android:layout_marginStart="16dp" />
    </LinearLayout>

</LinearLayout>